@import "../message-template/message-template.wxss";
.send-container {
  text-align: center;
  padding-top: 60rpx;
}

.user-icon {
  width: 132rpx;
  height: 132rpx;
  margin-bottom: 20rpx;
  border-radius: 64rpx;
}

.user-info{
  display: flex;
  flex-direction: row;
  justify-content:  center;
  margin-bottom: 80rpx;
}

.user-info text{
  font-size: 28rpx;
  vertical-align: middle;
}
.user-name{
 color: #000;
 font-size: 30rpx;
}

.info{
  display: flex;
  flex-direction: row;
  justify-content:  space-between;
  width:80%;
  margin:0 auto 95rpx;
}

.info-money{
  display: flex;
  flex-direction: column;
  margin-right: 50rpx;
}
.info-money-title{
  font-size: 30rpx;
  color: #888;
  margin-bottom: 15rpx;
}
.info-money-num{
  color:#888;
  font-size: 66rpx;
}

.info-num{
  display: flex;
  flex-direction: column;
}
.info-num-title{
  font-size: 30rpx;
  color: #888;
  margin-bottom: 15rpx;
}
.info-num-num{
  color:#888;
  font-size: 66rpx;
}




.send-list {
  margin-bottom: 50px;
}

.almost-question {
  position: relative;
  bottom:60rpx;
  color: #697b9f;
}
